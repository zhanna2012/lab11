@model UserLogin

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Login" id="exampleInputEmail1" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>
